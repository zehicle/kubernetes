#
# ETCD config variables 
#

# Name of this node
ETCD_CONFIG_NAME="-name <%= @name %>"

ETCD_DATA_DIR="-data-dir <%= @data_dir %>"

ETCD_CLUSTER_ARGS="-initial-cluster-token <%= @cluster_token %> -initial-cluster-state new -initial-cluster <%=@cluster_members%>"

ETCD_PEER_ARGS="-initial-advertise-peer-urls http://<%= @my_ip%>:<%= @peer_port %> -listen-peer-urls http://<%= @my_ip%>:<%= @peer_port %>"
ETCD_CLIENT_ARGS="-listen-client-urls http://<%= @my_ip%>:<%= @client_port %>,http://127.0.0.1:<%= @client_port %> -advertise-client-urls http://<%= @my_ip%>:<%= @client_port %>"
